{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@contentlayer/generated": [
        ".contentlayer/generated"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@constants/*": [
        "src/util/constants/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*",
    ".contentlayer/generated"
  ],
  "exclude": [
    "node_modules"
  ]
}
